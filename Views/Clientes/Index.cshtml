@model IEnumerable<CRUDProyect.Models.Entities.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Cliente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>
                    <a asp-action="DetalleClient" asp-route-id="@cliente.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="EditarClient" asp-route-id="@cliente.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="EliminarClient" asp-route-id="@cliente.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
